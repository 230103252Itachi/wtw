rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Wardrobe items (photos with metadata and AI characteristics)
      match /wardrobe/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Saved outfits (outfit recommendations with item keys)
      match /outfits/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
